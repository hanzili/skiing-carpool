.container {
  padding: 20rpx;
}

.category-list {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.category-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

/* 发布页面样式 */
.type-select {
  margin: 20rpx 0;
  display: flex;
  justify-content: space-around;
}

textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 8rpx;
}

input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  padding: 0 20rpx;
  margin: 20rpx 0;
  border-radius: 8rpx;
}

button {
  margin-top: 40rpx;
} 