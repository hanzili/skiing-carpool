.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.login-modal.visible {
  visibility: visible;
  opacity: 1;
}

.login-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
}

.login-modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 75%;
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.login-modal-header {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.login-modal-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.login-auth-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  line-height: 88rpx;
  text-align: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(7, 193, 96, 0.2);
  padding: 0;
  border: none;
}

.login-auth-btn-hover {
  background: #06b156;
  opacity: 0.9;
}

.login-auth-btn:active {
  opacity: 0.9;
}

.wechat-icon-text {
  display: inline-block;
  background-color: #ffffff;
  color: #07c160;
  font-size: 22rpx;
  font-weight: bold;
  border-radius: 6rpx;
  padding: 4rpx 8rpx;
  margin-right: 12rpx;
} 