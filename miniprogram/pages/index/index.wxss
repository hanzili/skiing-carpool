/* Base Container */
.container {
  padding: 16rpx 24rpx 120rpx 24rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* Utility Classes */
.p-4 { padding: 32rpx; }
.mb-3 { margin-bottom: 24rpx; }
.mb-4 { margin-bottom: 32rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mr-2 { margin-right: 16rpx; }
.ml-2 { margin-left: 16rpx; }
.flex { display: flex; }
.flex-1 { flex: 1; }
.flex-col { flex-direction: column; }
.items-center { align-items: center; }
.items-start { align-items: flex-start; }
.justify-between { justify-content: space-between; }
.w-full { width: 100%; }
.bg-transparent { background: transparent; }
.text-sm { font-size: 26rpx; }
.text-xs { font-size: 22rpx; }
.font-medium { font-weight: 500; }
.rounded-full { border-radius: 999rpx; }
.rounded-lg { border-radius: 16rpx; }
.overflow-x-auto { overflow-x: auto; }
.overflow-y-auto { overflow-y: auto; }
.bg-white { background: white; }
.shadow-sm { box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05); }
.gap-2 { gap: 16rpx; }
.pb-2 { padding-bottom: 16rpx; }
.px-3 { padding-left: 24rpx; padding-right: 24rpx; }
.py-2 { padding-top: 16rpx; padding-bottom: 16rpx; }
.p-3 { padding: 24rpx; }
.bg-gray-100 { background: #f1f3f6; }
.text-gray-500 { color: #9ca3af; }
.text-gray-600 { color: #4b5563; }
.text-gray-700 { color: #374151; }
.text-blue-600 { color: #2563eb; }
.text-green-600 { color: #059669; }
.border-gray-200 { border: 1rpx solid #e5e7eb; }
.w-6 { width: 48rpx; }
.h-6 { height: 48rpx; }

/* Search Section */
.search-section {
  padding: 24rpx 0 0 0;
  background-color: #f9f9f9;
}

/* Search Bar */
.search-wrapper {
  padding: 20rpx 0 24rpx 0;
  margin-bottom: 0rpx;
  width: 100%;
}

.search-bar {
  position: relative;
  height: 80rpx;
  background-color: #f2f2f2;
  border-radius: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  padding: 0 12rpx;
  width: 100%;
  box-sizing: border-box;
}

.search-icon-wrapper {
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #333;
  padding-left: 0;
  padding-right: 32rpx;
  background-color: transparent;
}

/* Filter Tabs */
.filter-tabs {
  display: flex;
  gap: 12rpx;
  padding: 8rpx 0 16rpx 0;
  overflow-x: auto;
  white-space: nowrap;
  margin-bottom: 8rpx;
}

/* Hide scrollbar */
.filter-tabs::-webkit-scrollbar,
.carpool-list::-webkit-scrollbar {
  display: none;
}

.filter-btn {
  flex-shrink: 0;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  border-radius: 36rpx;
  background-color: #eaedf2;
  color: #333;
  display: inline-block;
}

.filter-btn.active {
  background-color: #4080ff;
  color: #fff;
}

/* Carpool Cards */
.carpool-list {
  padding: 0;
  flex: 1;
  overflow-y: auto;
  margin-bottom: 80rpx;
  padding-bottom: 60rpx;
}

.carpool-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e5e7eb;
}

/* Type Badges */
.type-badge {
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.type-people {
  background-color: #e3f2fd;
  color: #1976d2;
}

.type-car {
  background-color: #e8f5e9;
  color: #2e7d32;
}

/* Avatar Placeholder */
.avatar-placeholder {
  background-color: #e5e7eb;
  border-radius: 50%;
}

/* Detail Button */
.detail-btn {
  background-color: #4080ff;
  color: white;
  font-size: 26rpx;
  padding: 10rpx 32rpx;
  border-radius: 999rpx;
  line-height: 1.5;
  margin: 0;
}

.detail-btn::after {
  border: none;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #9ca3af;
  font-size: 28rpx;
  text-align: center;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 0;
}

.title {
  font-size: 72rpx;
  font-weight: bold;
  color: #4080ff;
  display: block;
  margin-bottom: 24rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
  letter-spacing: 4rpx;
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 0 16rpx;
}

.category-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(64, 128, 255, 0.15);
  transition: all 0.2s ease;
}

.card-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.icon-wrapper.blue {
  background: rgba(64, 128, 255, 0.1);
}

.icon-wrapper.green {
  background: rgba(80, 182, 116, 0.1);
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.icon-wrapper.blue .icon {
  filter: brightness(0) saturate(100%) invert(42%) sepia(97%) saturate(1615%) hue-rotate(199deg) brightness(102%) contrast(96%);
}

.icon-wrapper.green .icon {
  filter: brightness(0) saturate(100%) invert(56%) sepia(74%) saturate(402%) hue-rotate(93deg) brightness(96%) contrast(89%);
}

.weui-icon {
  font-size: 56rpx;
  color: white;
}

.weui-icon-car,
.weui-icon-group {
  display: none;
}

.card-text {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.card-title {
  font-size: 40rpx;
  font-weight: 500;
  color: #333;
}

.card-description {
  font-size: 28rpx;
  color: #888;
  line-height: 1.5;
}

.card-arrow {
  color: #4080ff;
}

.weui-icon-arrow {
  font-size: 40rpx;
}

/* 添加装饰性元素 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  right: 0;
  width: 400rpx;
  height: 400rpx;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%234080ff" opacity="0.1"><path d="M12 3L4 21h16L12 3z"/></svg>') no-repeat;
  background-size: contain;
  opacity: 0.1;
  z-index: -1;
}

.arrow {
  font-size: 48rpx;
  color: #4080ff;
  font-weight: 300;
}

/* API Error and Loading */
.api-error {
  background-color: #fee2e2;
  border: 1px solid #ef4444;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 24rpx 20rpx;
  text-align: center;
}

.error-message {
  color: #b91c1c;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.retry-btn {
  background-color: #ef4444;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 999rpx;
  display: inline-block;
  margin: 0 auto;
}

.retry-btn::after {
  border: none;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e0e0e0;
  border-top: 6rpx solid #4080ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  color: #666;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Card Typography */
.carpool-date {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.carpool-fare {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.carpool-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

/* Floating Action Button */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 110rpx;
  height: 110rpx;
  background-color: #4080ff;
  border-radius: 50%;
  box-shadow: 0 6rpx 16rpx rgba(64, 128, 255, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.fab-icon {
  color: white;
  font-size: 64rpx;
  font-weight: 300;
  line-height: 1;
}

/* Bottom Spacer */
.bottom-spacer {
  height: 80rpx;
  width: 100%;
}