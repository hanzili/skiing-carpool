.option-name {
  font-size: 28rpx;
  color: #333;
}

.cancel-btn {
  width: 100%;
  height: 88rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 32rpx;
  border-radius: 12rpx;
  margin-top: 16rpx;
}

.cancel-btn::after {
  border: none;
} 