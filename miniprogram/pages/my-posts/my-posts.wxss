.container {
  padding: 0 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

.post-list {
  width: 100%;
  padding: 20rpx 0;
}

.post-item {
  background: #ffffff;
  padding: 30rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 166, 0.08);
  border: 1rpx solid rgba(0, 82, 166, 0.1);
  transition: all 0.3s ease;
}

.post-item:active {
  transform: scale(0.98);
}

.post-content {
  font-size: 30rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  color: #2c3e50;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.post-info {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #5c7a99;
  margin-bottom: 20rpx;
}

.post-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 20rpx;
}

button[size="mini"] {
  margin: 0;
  padding: 0 24rpx;
  line-height: 2.2;
  font-size: 26rpx;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.btn-status {
  background: #0052a6;
  color: #fff;
}

.btn-status:active {
  background: #004390;
}

.btn-status.btn-completed {
  background: #5c7a99;
}

.btn-edit {
  background: #2c8af8;
  color: #fff;
}

.btn-edit:active {
  background: #1b7ae7;
}

.btn-delete {
  background: #dc3545;
  color: #fff;
}

.btn-delete:active {
  background: #c82333;
}

.empty-tip {
  text-align: center;
  color: #5c7a99;
  padding: 60rpx;
  font-size: 28rpx;
}

/* Modal styles */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 82, 166, 0.4);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.edit-content {
  background: #fff;
  width: 680rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 166, 0.15);
}

.edit-header {
  font-size: 34rpx;
  font-weight: 600;
  padding: 30rpx;
  text-align: center;
  color: #2c3e50;
  border-bottom: 1rpx solid rgba(0, 82, 166, 0.1);
}

.edit-form {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 12rpx;
  display: block;
  font-weight: 500;
}

.edit-textarea {
  width: 100%;
  height: 180rpx;
  border: 2rpx solid rgba(0, 82, 166, 0.2);
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #f8fafc;
}

.edit-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid rgba(0, 82, 166, 0.2);
  padding: 0 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #f8fafc;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid rgba(0, 82, 166, 0.1);
}

.modal-btn {
  flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  transition: all 0.2s ease;
}

.modal-btn:first-child {
  border-right: 1rpx solid rgba(0, 82, 166, 0.1);
  color: #5c7a99;
}

.modal-btn-primary {
  color: #0052a6;
  font-weight: 500;
}

.modal-btn:active {
  background-color: #f0f7ff;
}

/* Move loading container styles here for better organization */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300rpx;
}

.loading {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0052a6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 