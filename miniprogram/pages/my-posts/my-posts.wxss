.container {
  padding: 0 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

.post-list {
  width: 100%;
  padding: 20rpx 0;
}

.post-item {
  background: #ffffff;
  padding: 30rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 166, 0.08);
  border: 1rpx solid rgba(0, 82, 166, 0.1);
  transition: all 0.3s ease;
}

.post-item:active {
  transform: scale(0.98);
}

.post-content {
  font-size: 30rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  color: #2c3e50;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.post-info {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #5c7a99;
  margin-bottom: 20rpx;
}

.post-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 20rpx;
}

button[size="mini"] {
  margin: 0;
  padding: 0 24rpx;
  line-height: 2.2;
  font-size: 26rpx;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.btn-status {
  background: #0052a6;
  color: #fff;
}

.btn-status:active {
  background: #004390;
}

.btn-status.btn-completed {
  background: #5c7a99;
}

.btn-edit {
  background: #2c8af8;
  color: #fff;
}

.btn-edit:active {
  background: #1b7ae7;
}

.btn-delete {
  background: #dc3545;
  color: #fff;
}

.btn-delete:active {
  background: #c82333;
}

.empty-tip {
  text-align: center;
  color: #5c7a99;
  padding: 60rpx;
  font-size: 28rpx;
}

/* Modal styles */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.edit-content {
  background: #fff;
  width: 680rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.edit-header {
  font-size: 34rpx;
  font-weight: 600;
  padding: 32rpx;
  text-align: center;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.edit-form {
  padding: 32rpx;
}

.form-item {
  margin-bottom: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  position: relative;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
  font-weight: 500;
}

.picker-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-value {
  font-size: 28rpx;
  color: #0052a6;
}

.picker-value.placeholder {
  color: #999;
}

.edit-textarea {
  width: 100%;
  height: 180rpx;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 16rpx;
  box-sizing: border-box;
  border: none;
  border-radius: 8rpx;
  background: transparent;
  color: #333;
}

.word-limit {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  font-size: 24rpx;
  color: #999;
}

.wechat-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #fff;
  padding: 16rpx;
  border-radius: 8rpx;
}

.wechat-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.8;
}

.wechat-field {
  flex: 1;
  font-size: 28rpx;
  height: 44rpx;
  border: none;
  background: transparent;
  color: #333;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  transition: all 0.2s ease;
}

.modal-btn:active {
  background-color: #f5f5f5;
}

.modal-btn:first-child {
  border-right: 1rpx solid #eee;
  color: #666;
}

.modal-btn-primary {
  color: #007AFF;
  font-weight: 500;
}

.modal-btn-primary.disabled {
  color: #999;
}

/* Move loading container styles here for better organization */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300rpx;
}

.loading {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0052a6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.post-type {
  font-size: 28rpx;
  color: #0052a6;
  font-weight: 500;
}

.post-status {
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  line-height: 1;
  display: inline-block;
}

.post-status.active {
  background: #e6f3ff;
  color: #0052a6;
}

.post-status.completed {
  background: #e6e6e6;
  color: #666666;
}

.post-status.expired {
  background: #fff2f0;
  color: #ff4d4f;
}

.departure-time {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.trip-info {
  display: flex;
  gap: 24rpx;
  margin-top: 16rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

/* Update existing button styles */
.btn-status, .btn-edit {
  min-width: 160rpx;
} 