.container {
  padding: 0;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f7f8fa;
  display: flex;
  flex-direction: column;
}

/* Tab Bar */
.tab-bar {
  display: flex;
  border-bottom: 1rpx solid #eaeaea;
  background-color: #fff;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #4080ff;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 4rpx;
  background-color: #4080ff;
  border-radius: 2rpx;
}

/* Post List */
.post-list {
  flex: 1;
  padding: 24rpx;
}

.post-item {
  background: #ffffff;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  min-height: 180rpx; /* Set a minimum height for all cards */
}

/* Post Header */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  height: 48rpx; /* Fixed height for header */
}

.post-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.type-badge {
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.people-badge {
  background-color: #e8eaff;
  color: #5c6ac4;
}

.car-badge {
  background-color: #e0f2fe;
  color: #0284c7;
}

.post-date {
  font-size: 28rpx;
  color: #666;
}

.status-control {
  background-color: #f9fafb;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid #eaeaea;
}

.status-title {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.status-buttons {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.status-btn {
  padding: 16rpx 24rpx;
  border-radius: 10rpx;
  background-color: white;
  border: 1rpx solid #e5e7eb;
  font-size: 28rpx;
  color: #4b5563;
  text-align: center;
  transition: all 0.2s ease;
}

.status-btn:active {
  opacity: 0.8;
}

.status-btn.active {
  background-color: #dbeafe;
  border-color: #bfdbfe;
  color: #1d4ed8;
  font-weight: 500;
}

/* Add status display styling */
.status-display {
  display: flex;
  align-items: center;
  gap: 10rpx;
  min-width: 120rpx; /* Ensure minimum width for status display */
  justify-content: flex-end; /* Right-align status for consistency */
}

.status-tag {
  font-size: 28rpx;
  font-weight: 600;
  color: #f97316;
  padding: 4rpx 0;
  text-align: right;
}

.status-tag.active {
  color: #f97316;
}

.status-tag.filled {
  color: #10b981;
}

.status-tag.completed {
  color: #10b981;
}

.status-tag.searching {
  color: #6366f1;
}

.status-tag.found {
  color: #6366f1;
}

.status-tag.expired {
  color: #9ca3af; /* Gray color for expired status */
  font-weight: 500;
  font-size: 28rpx;
  padding-right: 16rpx;
  min-width: 80rpx; /* Reserve space where "已过期" text would be */
  display: inline-block;
}

.toggle-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f3f4f6;
  border-radius: 50%;
}

.chevron {
  width: 16rpx;
  height: 16rpx;
  border-right: 3rpx solid #9ca3af;
  border-bottom: 3rpx solid #9ca3af;
  transform: rotate(45deg);
}

.chevron.up {
  transform: rotate(-135deg);
}

/* Seats Control */
.seats-control {
  background-color: #f9fafb;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid #eaeaea;
}

.seats-title {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.seats-buttons {
  display: flex;
  gap: 16rpx;
}

.seat-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  background-color: white;
  border: 1rpx solid #e5e7eb;
  font-size: 28rpx;
  color: #333;
}

.seat-btn.active {
  background-color: #dbeafe;
  border-color: #bfdbfe;
  color: #1d4ed8;
}

/* Post Content */
.post-content {
  font-size: 28rpx;
  line-height: 1.5;
  color: #4b5563;
  margin-bottom: 16rpx;
  word-wrap: break-word;
  white-space: pre-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3; /* Show only 3 lines */
  -webkit-box-orient: vertical;
  height: 126rpx; /* Fixed height: 3 lines * 1.5 line height * 28rpx font size */
  flex-grow: 0; /* Don't allow to grow beyond fixed height */
}

/* Post Footer */
.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto; /* Push to bottom of card */
  padding-top: 16rpx;
  border-top: 1rpx solid #f3f4f6;
  height: 50rpx; /* Fixed height for footer */
}

.post-time {
  font-size: 24rpx;
  color: #9ca3af;
}

.post-actions {
  display: flex;
  gap: 16rpx;
}

.btn-mini {
  margin: 0;
  padding: 0 20rpx;
  line-height: 2;
  font-size: 24rpx;
  border-radius: 999rpx;
}

.btn-edit {
  background: #f3f4f6;
  color: #4b5563;
  border-radius: 999rpx;
}

.btn-delete {
  background: #fee2e2;
  color: #ef4444;
  border-radius: 999rpx;
}

.btn-archive {
  background: #f3f4f6;
  color: #4b5563;
  border-radius: 999rpx;
}

.empty-tip {
  text-align: center;
  color: #9ca3af;
  padding: 60rpx;
  font-size: 28rpx;
}

/* Keep the existing modal styles */
/* Modal styles */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding-bottom: 100rpx;
}

.edit-content {
  background: #fff;
  width: 680rpx;
  max-height: 85vh;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx;
}

.edit-header {
  font-size: 34rpx;
  font-weight: 600;
  padding: 32rpx;
  text-align: center;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.edit-form {
  padding: 32rpx;
  overflow-y: auto;
  flex: 1;
}

.form-item {
  margin-bottom: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  position: relative;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
  font-weight: 500;
}

.picker-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-value {
  font-size: 28rpx;
  color: #0052a6;
}

.picker-value.placeholder {
  color: #999;
}

.edit-textarea {
  width: 100%;
  height: 180rpx;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 16rpx;
  box-sizing: border-box;
  border: none;
  border-radius: 8rpx;
  background: transparent;
  color: #333;
}

.word-limit {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  font-size: 24rpx;
  color: #999;
}

.wechat-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #fff;
  padding: 16rpx;
  border-radius: 8rpx;
}

.wechat-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.8;
}

.wechat-field {
  flex: 1;
  font-size: 28rpx;
  height: 44rpx;
  border: none;
  background: transparent;
  color: #333;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  transition: all 0.2s ease;
}

.modal-btn:active {
  background-color: #f5f5f5;
}

.modal-btn:first-child {
  border-right: 1rpx solid #eee;
  color: #666;
}

.modal-btn-primary {
  color: #007AFF;
  font-weight: 500;
}

.modal-btn-primary.disabled {
  color: #999;
}

/* WeChat Prompt */
.wechat-prompt {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.wechat-prompt-content {
  background: #fff;
  width: 600rpx;
  border-radius: 24rpx;
  overflow: hidden;
  padding: 40rpx;
}

.wechat-prompt-header {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 24rpx;
}

.wechat-prompt-text {
  font-size: 28rpx;
  text-align: center;
  color: #666;
  margin-bottom: 40rpx;
}

.wechat-auth-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160;
  color: white;
  font-size: 30rpx;
  border-radius: 12rpx;
  padding: 20rpx 0;
  width: 100%;
  margin: 0;
}

.wechat-icon-sm {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

/* Loading */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4080ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Archived Post Styling */
.archived-post {
  opacity: 0.9; /* Slightly faded appearance but still readable */
}

.archived-post .post-info {
  opacity: 0.9;
}

.archived-post .post-content {
  color: #6b7280; /* Darker gray for content text */
}

.archived-post .post-date,
.archived-post .post-time {
  color: #9ca3af; /* Lighter gray for dates and times */
}

.archived-post .status-tag {
  color: #9ca3af !important; /* Ensure expired status is always gray */
}

/* Make the status tag right-aligned in archived posts to maintain consistent layout */
.archived-post .status-display {
  justify-content: flex-end;
}

.wechat-icon-text {
  display: inline-block;
  background-color: #ffffff;
  color: #07c160;
  font-size: 22rpx;
  font-weight: bold;
  border-radius: 6rpx;
  padding: 4rpx 8rpx;
  margin-right: 12rpx;
} 